

<LoginScreen>:
    name: "LoginScreen"
    LoginTextInput:
        id: username_input
        pos_hint: {'center_x': .5, 'center_y': .6}
        hint_text: "Username"
    LoginTextInput:
        id: password_input
        pos_hint: {'center_x': .5, 'center_y': .5}
        hint_text: "Password"
        password: True
    LoginButton:
        text: "Login"
        pos_hint: {'center_x': .5, 'center_y': .2}
        disabled: False in map(bool, [username_input.text, password_input.text])
        on_release:
            root.login()

    SignupButton:
        text: "Sign up"
        pos_hint: {'center_x': .5, 'center_y': .1}
        on_release:
            root.manager.change_screen("SignupScreen")

<CustomSizingForLoginScreenWidgets@Widget>:
    size_hint_min_y: dp(35)
    size_hint_max_y: dp(50)
    size_hint_x: .7
    size_hint_y: .075

<LoginTextInput@TextInput+CustomSizingForLoginScreenWidgets>:
    multiline: False
<SignupButton@Button+CustomSizingForLoginScreenWidgets>:
<LoginButton@Button+CustomSizingForLoginScreenWidgets>:


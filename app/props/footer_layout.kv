#: import NavbarButton props.navbar_button.NavbarButton

<Footer>:
    height: 50
    size_hint_y: None
    Image:
        source: 'images/NavBar.png'
        keep_ratio: False
        allow_stretch: True
    BoxLayout:
        id: navbar
        NavbarButton:
            destination: "BodyStanceScreen"
            selected_image: "images/NavBar-Health-On.png"
            unselected_image: "images/NavBar-Health-Off.png"
            on_parent: self.select()
        NavbarButton:
            destination: "LiveLocationScreen"
            selected_image: "images/NavBar-Location-On.png"
            unselected_image: "images/NavBar-Location-Off.png"
        NavbarButton:
            destination: "LoginScreen"
            selected_image: "images/NavBar-Position-On.png"
            unselected_image: "images/NavBar-Position-Off.png"
        NavbarButton:
            destination: "NotificationScreen"
            selected_image: "images/NavBar-Settings-On.png"
            unselected_image: "images/NavBar-Settings-Off.png"
        NavbarButton:
            destination: "SettingsScreen"
            selected_image: "images/NavBar-Health-On.png"
            unselected_image: "images/NavBar-Health-Off.png"
        NavbarButton:
            destination: "SignupScreen"
            selected_image: "images/NavBar-Health-On.png"
            unselected_image: "images/NavBar-Health-Off.png"
        NavbarButton:
            destination: "StepScreen"
            selected_image: "images/NavBar-Health-On.png"
            unselected_image: "images/NavBar-Health-Off.png"
